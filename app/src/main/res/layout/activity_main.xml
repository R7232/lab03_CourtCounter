<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.lab03_courtcounter.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="勇士"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/Team_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="0"
                android:textSize="80dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#E0E0E0"
                android:gravity="center"
                android:onClick="fraction3"
                android:padding="8dp"
                android:text="+3分球"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#E0E0E0"
                android:gravity="center"
                android:onClick="fraction2"
                android:padding="8dp"
                android:text="+2分球"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#E0E0E0"
                android:gravity="center"
                android:onClick="penalty"
                android:padding="8dp"
                android:text="罰球"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="雷霆"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/Team_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="0"
                android:textSize="80dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#E0E0E0"
                android:gravity="center"
                android:onClick="fraction32"
                android:padding="8dp"
                android:text="+3分球"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#E0E0E0"
                android:gravity="center"
                android:onClick="fraction22"
                android:padding="8dp"
                android:text="+2分球"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#E0E0E0"
                android:gravity="center"
                android:onClick="penalty2"
                android:padding="8dp"
                android:text="罰球"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="#E0E0E0"
        android:gravity="center"
        android:onClick="reset"
        android:padding="8dp"
        android:text="重置"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp" />

</LinearLayout>
